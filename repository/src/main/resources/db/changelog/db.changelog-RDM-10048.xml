<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="RDM-10048" author="tobias.derose@hmcts.net">

        <!-- event_case_field -->
        <addColumn tableName="event_case_field">
            <column name="publish" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addColumn tableName="event_case_field">
            <column name="publish_as" type="varchar(70)" >
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- event_case_field_complex_type -->
        <addColumn tableName="event_case_field_complex_type">
            <column name="publish" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addColumn tableName="event_case_field_complex_type">
            <column name="publish_as" type="varchar(70)" >
                <constraints nullable="true"/>
            </column>
        </addColumn>

    </changeSet>
</databaseChangeLog>
