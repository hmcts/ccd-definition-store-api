<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="rdm-9031" author="tobias.derose@hmcts.net">

        <createTable tableName="challenge_question">

            <column name="id"  type="serial" >
                <constraints nullable="false"/>
            </column>

            <column name="case_type_id"  type="integer" >
                <constraints nullable="false"/>
            </column>

            <column name="display_order"  type="int" >
                <constraints nullable="false" />
            </column>

            <column name="question_text"  type="varchar(1000)" >
                <constraints nullable="false"/>
            </column>

            <column name="answer_field_type"  type="integer" >
                <constraints nullable="false" />
            </column>

            <column name="display_context_parameter"  type="varchar(1000)" >
                <constraints nullable="true"/>
            </column>

            <column name="challenge_question_id"  type="varchar(70)" >
                <constraints nullable="false"/>
            </column>

            <column name="answer_field"  type="varchar(1000)" >
                <constraints nullable="false"/>
            </column>

            <column name="question_id"  type="varchar(70)" >
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="pk_challenge_question"
                       tableName="challenge_question"/>

        <addForeignKeyConstraint baseColumnNames="case_type_id"
                                 baseTableName="challenge_question"
                                 constraintName="fk_challenge_question_case_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="case_type"/>



        <addForeignKeyConstraint baseColumnNames="answer_field_type"
                                 baseTableName="challenge_question"
                                 constraintName="fk_challenge_question_field_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="field_type"/>



    </changeSet>
</databaseChangeLog>
