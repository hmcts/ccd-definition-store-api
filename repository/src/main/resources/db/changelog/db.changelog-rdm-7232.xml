<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="rdm-7232" author="rafal.kalita@hmcts.net">
        <createTable tableName="category">
            <column name="id" type="serial">
                <constraints nullable="false"/>
            </column>
            <column name="case_type_id" type="integer" >
                <constraints nullable="false"/>
            </column>
            <column name="group_id" type="varchar(100)" >
                <constraints nullable="false"/>
            </column>
            <column name="group_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="display_order" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="parent_category_id" type="varchar(100)">
                <constraints nullable="true"/>
            </column>

        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="pk_category"
                       tableName="category"/>

        <addForeignKeyConstraint baseColumnNames="case_type_id"
                                 baseTableName="category"
                                 constraintName="fk_category_case_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="case_type"/>

        <addUniqueConstraint columnNames="case_type_id, group_id, category_id"
                             constraintName="unique_category_case_type_id_group_id_category_id"
                             tableName="category"/>

        <addColumn tableName="case_field">
            <column name="category_id" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="complex_field">
            <column name="category_id" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="field_type_list_item">
            <column name="category_id" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
