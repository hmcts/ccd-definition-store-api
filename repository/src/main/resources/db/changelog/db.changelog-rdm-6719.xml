<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="rdm-6719" author="kiran.yenigala@hmcts.net">

        <createTable tableName="banner">
            <column name="id" type="serial">
                <constraints nullable="false"/>
            </column>
            <column name="banner_enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="banner_description" type="varchar(300)">
                <constraints nullable="false"/>
            </column>
            <column name="banner_url_text" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="banner_url" type="varchar(300)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="datetime" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="jurisdiction_id"  type="integer" >
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="jurisdiction_id"
                                 baseTableName="banner"
                                 constraintName="fk_banner_jurisdiction_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jurisdiction"/>


    </changeSet>
</databaseChangeLog>
