<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="rdm-6965" author="daniel.lysiak1@hmcts.net">
        <createTable tableName="jurisdiction_ui_config">
            <column name="id" type="serial">
                <constraints nullable="false"/>
            </column>
            <column name="shuttered" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="jurisdiction_id" type="integer" >
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="jurisdiction_id"
                                 baseTableName="jurisdiction_ui_config"
                                 constraintName="fk_jurisdiction_ui_config_jurisdiction_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jurisdiction"/>

    </changeSet>
</databaseChangeLog>
