<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="rdm-8509" author="rebecca.baker@hmcts.net">
        <createTable tableName="search_cases_result_fields">
            <column name="id" type="serial">
                <constraints nullable="false"/>
            </column>
            <column name="live_from" type="date" >
                <constraints nullable="true"/>
            </column>
            <column name="live_to" type="date" >
                <constraints nullable="true"/>
            </column>
            <column name="case_type_id" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="case_field_element_path" type="varchar(300)">
                <constraints nullable="true"/>
            </column>
            <column name="role_id" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="case_field_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(30)" >
                <constraints nullable="false" />
            </column>
            <column name="hint" type="text" >
                <constraints nullable="true" />
            </column>
            <column name="use_case" type="text" >
                <constraints nullable="true" />
            </column>
            <column name="display_order" type="integer" >
                <constraints nullable="true"/>
            </column>
            <column name="sort_order_direction" type="varchar(10)" >
                <constraints nullable="true"/>
            </column>
            <column name="sort_order_priority" type="integer" >
                <constraints nullable="true"/>
            </column>
            <column name="display_context_parameter" type="varchar(1000)"/>
        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="pk_search_cases_result_fields"
                       tableName="search_cases_result_fields"/>

        <!-- Add foreign key for case_type_id column linking to case_type table -->
        <addForeignKeyConstraint baseColumnNames="case_type_id"
                                 baseTableName="search_cases_result_fields"
                                 constraintName="fk_search_cases_result_fields_case_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="case_type"/>

        <!-- Add foreign key for case_field_id column linking to case_field table -->
        <addForeignKeyConstraint baseColumnNames="case_field_id"
                                 baseTableName="search_cases_result_fields"
                                 constraintName="fk_search_cases_result_fields_case_field_id_case_field_id"
                                 referencedColumnNames="id"
                                 referencedTableName="case_field"/>

        <!-- Add foreign key for role_id column linking to role table -->
        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="search_cases_result_fields"
                                 constraintName="fk_search_cases_result_fields_role_id_role_id"
                                 referencedColumnNames="id"
                                 referencedTableName="role"/>
    </changeSet>
</databaseChangeLog>
